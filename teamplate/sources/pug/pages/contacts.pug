extends  ../_skeleton

include ../components/_ui-box-icon

block variables
	- var activeCategory = 'contacts'
	- var pageName = 'Contacts'

block page 
	// Page Header
	include ../sections/_header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		img: 'images/icon-lists-title-bg.jpg'
	})
	
	section.section.section-lg.text-center.bg-default
		.container
			.row.row-50
				.col-md-6.col-lg-4
					+box-icon-classic({
						boxMod: 'box-contact-info',
						classMod: 'decorate-triangle',
						icon: 'linearicons-phone-incoming',
						link: 'tel:#',
						title: '1-800-123-1234'
					})
						p You can call us anytime
				.col-md-6.col-lg-4
					+box-icon-classic({
						boxMod: 'box-contact-info',
						classMod: 'decorate-circle',
						icon: 'linearicons-map2',
						title: '51 Francis Street, Darlinghurst NSW 2010, United States'
					})
						
				.col-md-6.col-lg-4
					+box-icon-classic({
						boxMod: 'box-contact-info',
						classMod: 'decorate-rectangle',
						icon: 'linearicons-paper-plane',
						link: 'mailto:#',
						title: 'info@demolink.org'
					})
						p Feel free to email us your questions





	// Contact us
	include ../includes/_section-contact-form
	
	// Page Footer
	include ../sections/_footer-minimal
